<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:padding="@dimen/dimen_large_margin"
    android:orientation="vertical"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivPokemon"
        android:src="@drawable/poke_d"
        android:layout_width="@dimen/dimen_width_image_pokemon"
        android:layout_height="@dimen/dimen_width_image_pokemon"/>

    <TextView
        android:id="@+id/tvName"
        android:paddingTop="@dimen/dimen_padding_text_top"
        android:paddingBottom="@dimen/dimen_padding_text_top"
        android:paddingStart="@dimen/dimen_padding_text_start"
        android:paddingEnd="@dimen/dimen_padding_text_start"
        android:ellipsize="end"
        android:maxLines="1"
        android:background="@drawable/background_textview"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_large_margin"
        android:fontFamily="@font/cabin_bold"
        android:textSize="@dimen/size_medium"
        tools:text="Magicarp The major" />

</LinearLayout>